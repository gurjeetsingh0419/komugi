<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/lv_bg"
    >

    <ImageView
        android:id="@+id/arrow_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:src="@drawable/arrowicon"
        android:layout_marginRight="5dp"
        />
    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/arrow_icon"
        android:text="Komugi Deli"
        android:textSize="12sp"
        android:textColor="#000000"
        android:layout_toLeftOf="@+id/loc_icon"
        />
    <TextView
        android:id="@+id/adress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/arrow_icon"
        android:layout_below="@+id/name"
        android:text="adress 1\nadress2\nadress3"
        android:textSize="12sp"
        android:textColor="#000000"
        android:layout_toLeftOf="@+id/loc_icon"
        />
    <ImageView
        android:id="@+id/loc_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/call_icon"
        android:src="@drawable/mapicon"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="10dp"/>
    <ImageView
        android:id="@+id/call_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/callicon"
        />
</RelativeLayout>